<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tetracosm_Remembrance"
        xmlns:gif="http://wpfanimatedgif.codeplex.com" x:Class="Tetracosm_Remembrance.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" WindowStyle="None" Background="{x:Null}" AllowsTransparency="True" Topmost="True" Left="0" Top="0" HorizontalAlignment="Left" VerticalAlignment="Top" KeyUp="DebugToggle">
    <Grid>
        <Image x:Name="MainObject" HorizontalAlignment="Left" Height="100" VerticalAlignment="Top" Width="100" Source="/Gifs_Images/AriaFly.gif" gif:ImageBehavior.AnimatedSource="/Gifs_Images/AriaFly.gif" RenderOptions.BitmapScalingMode="NearestNeighbor" RenderOptions.EdgeMode="Aliased" MouseRightButtonDown="MainObject_RightClick" MouseLeftButtonDown="MainObject_Flick">
            <Image.LayoutTransform>
                <TransformGroup>
                    <ScaleTransform ScaleY="1"/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Image.LayoutTransform>
        </Image>
        <Grid x:Name="DebugInfo" Margin="0,0,594,150" VerticalAlignment="Top" HorizontalAlignment="Left" Background="#996D6D6D" Visibility="Collapsed">
            <Label x:Name="MomentumXDisplay" Content="MomentumX" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,114,0,0"/>
            <Label x:Name="MomentumYDisplay" Content="MomentumY" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,140,0,0"/>
            <Label x:Name="XPosition" Content="XPosition" HorizontalAlignment="Left" VerticalAlignment="Top"/>
            <Label x:Name="YPosition" Content="YPosition" HorizontalAlignment="Left" Margin="0,26,0,0" VerticalAlignment="Top"/>
            <Label x:Name="TargetX" Content="TargetX" HorizontalAlignment="Left" Margin="0,57,0,0" VerticalAlignment="Top"/>
            <Label x:Name="TargetY" Content="TargetY" HorizontalAlignment="Left" Margin="0,83,0,0" VerticalAlignment="Top"/>
            <Label x:Name="ScreenWidth" Content="ScreenWidth" HorizontalAlignment="Left" Margin="0,228,0,0" VerticalAlignment="Top"/>
            <Label x:Name="ScreenHeight" Content="ScreenHeight" HorizontalAlignment="Left" Margin="0,254,0,0" VerticalAlignment="Top"/>
            <Label x:Name="SwitcherDisplay" Content="Switcher" HorizontalAlignment="Left" Margin="0,171,0,0" VerticalAlignment="Top"/>
            <Label x:Name="CurrentBehaviourDisplay" Content="Current Behaviour" HorizontalAlignment="Left" Margin="0,197,0,0" VerticalAlignment="Top"/>
        </Grid>
        <Image HorizontalAlignment="Left" Height="20" Margin="212,35,0,0" VerticalAlignment="Top" Width="20" RenderOptions.BitmapScalingMode="NearestNeighbor" RenderOptions.EdgeMode="Aliased" gif:ImageBehavior.AnimatedSource="/Gifs_Images/Z.gif" Visibility="Hidden"/>
        <Image HorizontalAlignment="Left" Height="20" Margin="212,35,0,0" VerticalAlignment="Top" Width="20" RenderOptions.BitmapScalingMode="NearestNeighbor" RenderOptions.EdgeMode="Aliased" gif:ImageBehavior.AnimatedSource="/Gifs_Images/Z.gif" Visibility="Hidden"/>
        <Image HorizontalAlignment="Left" Height="20" Margin="212,35,0,0" VerticalAlignment="Top" Width="20" RenderOptions.BitmapScalingMode="NearestNeighbor" RenderOptions.EdgeMode="Aliased" gif:ImageBehavior.AnimatedSource="/Gifs_Images/Z.gif" Visibility="Hidden"/>
        <Image HorizontalAlignment="Left" Height="20" Margin="212,35,0,0" VerticalAlignment="Top" Width="20" Source="/Gifs_Images/Green Note.png" RenderOptions.BitmapScalingMode="NearestNeighbor" RenderOptions.EdgeMode="Aliased"/>
        <Image HorizontalAlignment="Left" Height="20" Margin="212,35,0,0" VerticalAlignment="Top" Width="20" Source="/Gifs_Images/Green Note.png" RenderOptions.BitmapScalingMode="NearestNeighbor" RenderOptions.EdgeMode="Aliased"/>
        <Image HorizontalAlignment="Left" Height="20" Margin="212,35,0,0" VerticalAlignment="Top" Width="20" Source="/Gifs_Images/Green Note.png" RenderOptions.BitmapScalingMode="NearestNeighbor" RenderOptions.EdgeMode="Aliased"/>
        <Image HorizontalAlignment="Left" Height="20" Margin="212,35,0,0" VerticalAlignment="Top" Width="20" Source="/Gifs_Images/Green Note.png" RenderOptions.BitmapScalingMode="NearestNeighbor" RenderOptions.EdgeMode="Aliased"/>
        <Image HorizontalAlignment="Left" Height="20" Margin="212,35,0,0" VerticalAlignment="Top" Width="20" Source="/Gifs_Images/Green Note.png" RenderOptions.BitmapScalingMode="NearestNeighbor" RenderOptions.EdgeMode="Aliased"/>
    </Grid>
</Window>
